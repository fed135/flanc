{
    "compilerOptions": {
      "moduleResolution": "node",
      "allowJs": false,
      "alwaysStrict": false,
      "checkJs": false,
      "esModuleInterop": true,
      "module": "commonjs",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "target": "ES2020",
      "types": [
        "jest",
        "node"
      ],
      "outDir": "./bin",
    },
    "exclude": [
      "node_modules",
      "test/**/*.ts"
    ],
    "include": [
      "types.d.ts",
      "src/**/*.ts",
    ]
  }
    