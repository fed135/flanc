{
    "name": "flanc",
    "version": "0.0.1",
    "description": "The core engine and utils for flanc apis",
    "license": "Apache-2.0",
    "keywords": [
        "router",
        "framework",
        "api",
        "openapi",
        "domain"
    ],
    "dependencies": {
        "axios": "^0.21.1",
        "config": "^3.3.0",
        "express": "^4.17.1",
        "ha-store": "^2.0.5",
        "i18next": "^20.2.0",
        "i18next-node-fs-backend": "^2.1.3",
        "jsonwebtoken": "^8.5.1",
        "lodash.get": "^4.4.2",
        "luxon": "^1.26.0",
        "stoppable": "^1.1.0",
        "swagger-route-validator": "^1.0.2",
        "uuid": "^8.3.0",
        "uuid-validate": "^0.0.3"
    },
    "devDependencies": {
        "jest": "^26.6.0",
        "ts-jest": "^26.5.0",
        "typescript": "^4.2.4"
    },
    "typings": "types.d.ts",
    "scripts": {
        "build": "rm -rf ./bin && tsc --esModuleInterop true --outDir ./bin ./types.d.ts src/*.ts && cp ./package.json ./bin/package.json && cp ./README.md ./bin/README.md && cp ./types.d.ts ./bin/types.d.ts",
        "test": "TEST_MODE=test jest ./test/*"
    },
    "main": "./server",
    "homepage": "https://github.com/fed135/flanc",
  "contributors": [
    "frederic charette <fredericcharette@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/fed135/flanc/issues"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/fed135/flanc.js.git",
    "directory": "packages/flanc"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "isolatedModules": true
      }
    },
    "setupFilesAfterEnv": [
        "<rootDir>/test/utils/error-matchers.ts"
    ]
  }
}
